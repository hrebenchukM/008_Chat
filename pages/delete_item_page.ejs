
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" /> 
<script>

  window.onload = function() {

  var btn = document.getElementById('btn');
  var errorContainer = document.getElementById('errorMsg'); 
  btn.onclick = sendData;

  function sendData() {
  var xhr = new XMLHttpRequest();

  xhr.open('POST','/delete/item');


  var Id = document.getElementById('id').value;

              // валидация ввода пользователя 
            
                  if (Id === '') { 
                    // обработка ошибок 
                    errorContainer.innerHTML = 'Error! Empty Field!'
                    console.log('Empty Field!'); 
                    return;  
                    }
              
              
              errorContainer.innerHTML = ''; 
              
              var item = {
                    Id: Id
                };
              
              var data = JSON.stringify(item); 
              
              xhr.setRequestHeader('Content-Type', 'application/json'); 
              
              xhr.send(data); 
              
          

            
      } 
      
                
   }
</script>
<div class="panel well">
    <h3>Delete item by ID!</h3>
    <div class="form-group">
        <label>ID: <input type="text" id="id" class="form-control" /></label>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-info" href="/" id="btn">Delete</button> 
        <h5 style="color: red; font-weight: bold" id="errorMsg"><h5>
    </div>
</div>